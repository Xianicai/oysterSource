<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.oystersource.utils.view.ActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionTitle="首页"
        app:hintBackImage="true" />

    <com.oystersource.utils.view.BorderView
        android:id="@+id/mLayoutAddOyster"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:borderViewBackgroundColor="@color/theme_color"
        app:borderViewRadius="8dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_add_oyster" />

        <com.oystersource.utils.view.KKTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="下苗"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </com.oystersource.utils.view.BorderView>

    <com.oystersource.utils.view.BorderView
        android:id="@+id/mLayoutBreed"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:borderViewBackgroundColor="@color/theme_color"
        app:borderViewRadius="8dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_raise" />

        <com.oystersource.utils.view.KKTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="养殖"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </com.oystersource.utils.view.BorderView>

    <com.oystersource.utils.view.BorderView
        android:id="@+id/mLayoutCollect"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:borderViewBackgroundColor="@color/theme_color"
        app:borderViewRadius="8dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_collect" />

        <com.oystersource.utils.view.KKTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="采收"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </com.oystersource.utils.view.BorderView>

    <com.oystersource.utils.view.BorderView
        android:id="@+id/mLayoutAddFarmer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:borderViewBackgroundColor="@color/theme_color"
        app:borderViewRadius="8dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_authorization" />

        <com.oystersource.utils.view.KKTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="养殖户确权"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </com.oystersource.utils.view.BorderView>

</LinearLayout>
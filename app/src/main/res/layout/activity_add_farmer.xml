<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.oystersource.utils.view.ActionBar
        android:id="@+id/mActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionTitle="养殖户确权" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".home.view.AddOysterActivity">

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入养殖户姓名"
                app:customTitle="养殖户姓名" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入联系电话"
                app:customTitle="联系电话" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutAd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入常用地址"
                app:customTitle="常用地址" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutFarmYear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入承包养殖年限"
                app:customTitle="承包养殖年限" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutCount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入水泥串浮阀数量"
                app:customTitle="水泥串浮阀数量" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutFarmNum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入养殖编号"
                app:customTitle="养殖编号" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutFarmArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入养殖区域面积"
                app:customTitle="养殖区域面积" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutFarmOutput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入养殖预计产量"
                app:customTitle="养殖预计产量" />

            <com.oystersource.utils.view.CustomTitleEditLayout
                android:id="@+id/mLayoutFarmAd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:customEdHint="请输入选择养殖位置"
                app:customTitle="养殖位置" />

            <com.amap.api.maps.MapView
                android:id="@+id/mMapView"
                android:layout_width="match_parent"
                android:layout_height="220dp" />


            <com.oystersource.utils.view.BorderView
                android:id="@+id/mTvAdd"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                app:borderViewBackgroundColor="@color/theme_color"
                app:borderViewRadius="9dp"
                app:borderViewText="提交"
                app:borderViewTextColor="@color/white"
                app:borderViewTextSize="17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
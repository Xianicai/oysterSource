<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">
    <!--    android:background="@color/btn_ghost_blue_border_disabled"-->


    <com.qmuiteam.qmui.widget.QMUIViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />

    <com.qmuiteam.qmui.widget.QMUITabSegment
        android:id="@+id/mTabSegment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:qmui_tab_icon_position="top"
        app:qmui_tab_has_indicator="true"
        app:qmui_topDividerColor="@color/black"
        app:qmui_topDividerHeight="1px" />
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>